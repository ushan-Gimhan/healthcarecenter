<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="900.0"
            stylesheets="@../css/add.css"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.service.Project.HealthCare.controller.SessionController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- Header Section -->
            <top>
                <HBox alignment="CENTER" spacing="15.0" styleClass="header-container">
                    <padding>
                        <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
                    </padding>
                    <Label alignment="CENTER" maxWidth="Infinity" styleClass="header-label"
                           text="Therapy Session Management" HBox.hgrow="ALWAYS"/>
                    <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="NEVER" styleClass="stats-container">
                        <Label text="Total Sessions:" styleClass="count-label"/>
                        <Label fx:id="lblSessionCount" text="0" styleClass="count-value"/>
                    </HBox>
                </HBox>
            </top>

            <!-- Main Content -->
            <center>
                <VBox spacing="20.0">
                    <padding>
                        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
                    </padding>

                    <!-- Patient & Therapist Section -->
                    <HBox spacing="25.0" VBox.vgrow="NEVER">
                        <!-- Patient Section -->
                        <VBox spacing="15.0" styleClass="section-container" HBox.hgrow="ALWAYS">
                            <Label styleClass="section-header" text="Patient Information"/>
                            <GridPane hgap="15" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="130.0"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>
                                <children>
                                    <Label text="Patient ID" styleClass="form-label" GridPane.rowIndex="0"/>
                                    <ComboBox fx:id="cmbPatientSelect" styleClass="combo-box"
                                              onAction="#selectPatient" prefWidth="250.0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                    <Label text="Patient Name" styleClass="form-label" GridPane.rowIndex="1"/>
                                    <Label fx:id="lblPatientName" prefHeight="18.0" prefWidth="250.0"
                                           styleClass="info-label" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                </children>
                            </GridPane>
                        </VBox>

                        <!-- Therapist Section -->
                        <VBox spacing="15.0" styleClass="section-container" HBox.hgrow="ALWAYS">
                            <Label styleClass="section-header" text="Therapist Information"/>
                            <GridPane hgap="15" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="130.0"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>
                                <children>
                                    <Label text="Therapist ID" styleClass="form-label" GridPane.rowIndex="0"/>
                                    <ComboBox fx:id="cmbTherapistSelect" styleClass="combo-box"
                                              onAction="#selectTherapist" prefWidth="250.0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                    <Label text="Therapist Name" styleClass="form-label" GridPane.rowIndex="1"/>
                                    <Label fx:id="lblTherapistName" prefHeight="18.0" prefWidth="250.0"
                                           styleClass="info-label" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                </children>
                            </GridPane>
                        </VBox>
                    </HBox>

                    <!-- Session Details -->
                    <VBox spacing="15.0" styleClass="section-container" VBox.vgrow="NEVER">
                        <Label styleClass="section-header" text="Session Details"/>
                        <GridPane hgap="15" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints prefWidth="130.0"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                                <ColumnConstraints prefWidth="130.0"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <children>
                                <Label text="Session ID" styleClass="form-label" GridPane.rowIndex="0"/>
                                <Label fx:id="lblSessionId" styleClass="info-label" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Status" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                                <ComboBox fx:id="cmbStatus" styleClass="combo-box" prefWidth="180.0" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                                <Label text="Therapy Program" styleClass="form-label" GridPane.rowIndex="1"/>
                                <ComboBox fx:id="cmbTherapyProgram" styleClass="combo-box" prefWidth="180.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Date" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                                <DatePicker fx:id="dpSessionDate" styleClass="text-field" prefWidth="180.0" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                                <Label text="Time" styleClass="form-label" GridPane.rowIndex="2"/>
                                <TextField fx:id="txtSessionTime" promptText="HH:MM:SS" styleClass="text-field" prefWidth="180.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>
                    </VBox>

                    <!-- Buttons -->
                    <HBox alignment="CENTER" spacing="25" styleClass="button-container">
                        <Button fx:id="btnAdd" text="Add" prefWidth="130" onAction="#addSession" styleClass="action-button"/>
                        <Button fx:id="btnUpdate" text="Update" prefWidth="130" onAction="#updateSession" styleClass="action-button"/>
                        <Button fx:id="btnDelete" text="Delete" prefWidth="130" onAction="#deleteSession" styleClass="action-button"/>
                        <Button fx:id="btnReset" text="Reset" prefWidth="130" onAction="#resetFields" styleClass="action-button"/>
                    </HBox>

                    <!-- Table Section -->
                    <VBox VBox.vgrow="ALWAYS" styleClass="table-container">
                        <TableView fx:id="sessionTable" onMouseClicked="#tableClicked" VBox.vgrow="ALWAYS" styleClass="table-view">
                            <columns>
                                <TableColumn fx:id="colSessionId" text="Session ID" prefWidth="80.0"/>
                                <TableColumn fx:id="colPatient" text="Patient" prefWidth="120.0"/>
                                <TableColumn fx:id="colTherapist" text="Therapist" prefWidth="120.0"/>
                                <TableColumn fx:id="colTherapyProgram" text="Program" prefWidth="120.0"/>
                                <TableColumn fx:id="colDate" text="Date" prefWidth="100.0"/>
                                <TableColumn fx:id="colTime" text="Time" prefWidth="100.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
