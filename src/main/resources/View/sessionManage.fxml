<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" stylesheets="@../css/add.css"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.service.Project.HealthCare.controller.SessionController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- Header Section -->
            <top>
                <HBox alignment="CENTER" spacing="15.0" styleClass="header-container">
                    <padding>
                        <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
                    </padding>
                    <Label alignment="CENTER" maxWidth="Infinity" styleClass="header-label"
                           text="Therapy Session Management" HBox.hgrow="ALWAYS"/>
                    <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="NEVER" styleClass="stats-container">
                        <Label text="Total Sessions:" styleClass="count-label"/>
                        <Label fx:id="lblSessionCount" text="0" styleClass="count-value"/>
                    </HBox>
                </HBox>
            </top>

            <!-- Main Content -->
            <center>
                <VBox spacing="20.0">
                    <padding>
                        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
                    </padding>

                    <!-- Form Section -->
                    <HBox spacing="25.0" VBox.vgrow="NEVER">
                        <!-- Patient Section -->
                        <VBox spacing="15.0" styleClass="section-container" HBox.hgrow="ALWAYS">
                            <Label styleClass="section-header" text="Patient Information"/>
                            <GridPane hgap="15" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="130.0" minWidth="120.0"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints vgrow="NEVER"/>
                                    <RowConstraints vgrow="NEVER"/>
                                </rowConstraints>
                                <children>
                                    <Label text="Patient ID" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                    <ComboBox fx:id="cmbPatientSelect" styleClass="combo-box" onAction="#selectPatient"
                                              prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                    <Label text="Patient Name" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                    <Label fx:id="lblPatientName" prefHeight="18.0" prefWidth="250.0"
                                           styleClass="info-label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                </children>
                            </GridPane>
                        </VBox>

                        <!-- Therapist Section -->
                        <VBox spacing="15.0" styleClass="section-container" HBox.hgrow="ALWAYS">
                            <Label styleClass="section-header" text="Therapist Information"/>
                            <GridPane hgap="15" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="130.0" minWidth="120.0"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints vgrow="NEVER"/>
                                    <RowConstraints vgrow="NEVER"/>
                                </rowConstraints>
                                <children>
                                    <Label text="Therapist ID" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                    <ComboBox fx:id="cmbTherapistSelect" styleClass="combo-box" onAction="#selectTherapist"
                                              prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                    <Label text="Therapist Name" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                    <Label fx:id="lblTherapistName" prefHeight="18.0" prefWidth="250.0"
                                           styleClass="info-label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                </children>
                            </GridPane>
                        </VBox>
                    </HBox>

                    <!-- Session Details Section -->
                    <VBox spacing="15.0" styleClass="section-container" VBox.vgrow="NEVER">
                        <Label styleClass="section-header" text="Session Details"/>
                        <HBox spacing="25.0">
                            <GridPane hgap="15" vgap="10" HBox.hgrow="ALWAYS">
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="130.0" minWidth="120.0"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                    <ColumnConstraints prefWidth="130.0" minWidth="120.0"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints vgrow="NEVER"/>
                                    <RowConstraints vgrow="NEVER"/>
                                    <RowConstraints vgrow="NEVER"/>
                                </rowConstraints>
                                <children>
                                    <Label text="Session ID" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                    <Label fx:id="lblSessionId" prefHeight="18.0" prefWidth="180.0"
                                           styleClass="info-label" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                                    <Label text="Status" styleClass="form-label" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                                    <ComboBox fx:id="cmbStatus" styleClass="combo-box" prefWidth="180.0"
                                              GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                                    <Label text="Therapy Program" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                    <ComboBox fx:id="cmbTherapyProgram" styleClass="combo-box" prefWidth="180.0"
                                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                                    <Label text="Date" styleClass="form-label" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                                    <DatePicker fx:id="dpSessionDate" styleClass="text-field" prefWidth="180.0"
                                                GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                                    <Label text="Time" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                    <TextField fx:id="txtSessionTime" promptText="HH:MM:SS" styleClass="text-field"
                                               prefWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                </children>
                            </GridPane>
                        </HBox>
                    </VBox>

                    <!-- Action Buttons -->
                    <HBox alignment="CENTER" spacing="25" styleClass="button-container">
                        <Button fx:id="btnAdd" onAction="#addSession" styleClass="action-button" text="Add" prefWidth="130"/>
                        <Button fx:id="btnUpdate" onAction="#updateSession" styleClass="action-button" text="Update" prefWidth="130"/>
                        <Button fx:id="btnDelete" onAction="#deleteSession" styleClass="action-button" text="Delete" prefWidth="130"/>
                        <Button fx:id="btnReset" onAction="#resetFields" styleClass="action-button" text="Reset" prefWidth="130"/>
                    </HBox>

                    <!-- Table Section -->
                    <VBox VBox.vgrow="ALWAYS" styleClass="table-container">
                        <TableView fx:id="sessionTable" onMouseClicked="#tableClicked" styleClass="table-view" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colSessionId" prefWidth="80.0" text="Session ID"/>
                                <TableColumn fx:id="colPatient" prefWidth="120.0" text="Patient"/>
                                <TableColumn fx:id="colTherapist" prefWidth="120.0" text="Therapist"/>
                                <TableColumn fx:id="colTherapyProgram" prefWidth="120.0" text="Program"/>
                                <TableColumn fx:id="colDate" prefWidth="100.0" text="Date"/>
                                <TableColumn fx:id="colTime" prefWidth="100.0" text="Time"/>
                                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>